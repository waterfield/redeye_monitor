<script id="bootstrap" type="text/json">
  <%== project.to_json.html_safe %>
</script>

<script type="text/javascript">
  $(function() {
    var json_div = document.createElement('div');
    json_div.innerHTML = $('#bootstrap').text();
    var project = JSON.parse(json_div.innerHTML);
    window.app = new App.ProjectRouter({project: project});
    Backbone.history.start({pushState: true});
  });
</script>